<h1><%= @artist.id ? "Edit Artist" : "New Artist" %></h1>
<hr />
<div>
  <%= form_for @artist do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
  </div>
  <div>
    <%= f.label :avatar %>
    <%= f.text_field :avatar, required: true %>
  </div>
  <%= f.submit %>
  <% end %>
</div>